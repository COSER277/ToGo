/* pages/goods_list/index.wxss */
.first_tab{}
.first_tab .goods_item{
  display: flex;
}
/*  */
.goods_item .goods_image_wrapper{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  
}
.goods_image_wrapper image{
  width: 70%;
  display: flex;
  justify-content: center;
  align-items: center;
}

/*  */
.goods_item .goods_infos{
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goods_infos .infos_name{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_infos .infos_price{
  color: var(--themeColor);
  font-size: 32rpx;
}